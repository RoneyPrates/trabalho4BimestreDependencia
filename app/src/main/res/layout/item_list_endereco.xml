<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <!-- Código do endereço (exibição opcional, se aplicável) -->
    <TextView
        android:id="@+id/tvCodigoEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Logradouro -->
    <TextView
        android:id="@+id/tvLogradouroEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logradouro"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Número -->
    <TextView
        android:id="@+id/tvNumeroEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Bairro -->
    <TextView
        android:id="@+id/tvBairroEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bairro"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- Cidade -->
    <TextView
        android:id="@+id/tvCidadeEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- UF (Unidade Federativa) -->
    <TextView
        android:id="@+id/tvUfEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UF"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <!-- CEP -->
    <TextView
        android:id="@+id/tvCepEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEP"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>
</LinearLayout>
